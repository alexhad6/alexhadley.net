---
import "@fontsource-variable/inter";
import { siteName } from "@/constants";
import Header from "@/components/Header.astro";

type Props = {
  /**
   * Optional page title.
   *
   * If included, the page title will be set to `{title} | {siteName}`; otherwise, the
   * title will just be `{siteName}`.
   */
  title?: string;
};

const { title } = Astro.props;
const titlePrefix = title ? `${title} | ` : "";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Alex Hadleyâ€™s software portfolio." />
    <title>{titlePrefix + siteName}</title>
  </head>
  <body>
    <Header />
    <main class="space-y-2 p-4">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  html {
    font-family: "Inter Variable", sans-serif;
  }
</style>
