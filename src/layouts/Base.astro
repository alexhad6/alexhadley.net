---
import "@fontsource-variable/inter";

type Props = {
  /** Page title. */
  title: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="p-4">
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: "Inter Variable", sans-serif;
  }
</style>
