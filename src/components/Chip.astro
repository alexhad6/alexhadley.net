---
type Props = {
  /** Reference to link to. */
  href: string;
};

const { href } = Astro.props;
---

<a
  class="rounded-full border border-slate-400 bg-slate-300 px-2 text-sm hover:border-slate-500 hover:bg-slate-400 dark:border-slate-500 dark:bg-slate-600 dark:hover:border-slate-400 dark:hover:bg-slate-500"
  href={href}
  target="_blank"
>
  <slot />
</a>
