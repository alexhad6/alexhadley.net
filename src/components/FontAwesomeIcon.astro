---
import type { IconDefinition } from "@fortawesome/fontawesome-svg-core";
import { icon } from "@fortawesome/fontawesome-svg-core";
import { Icon } from "@/components";

type Props = {
  /** The Font Awesome icon to use. */
  icon: IconDefinition;
};

const { icon: iconDefinition } = Astro.props;
const [abstract] = icon(iconDefinition).abstract;
const viewBox: string = abstract.attributes.viewBox;
const svgPath: string = abstract.children![0].attributes.d;
---

<Icon {viewBox} svgPath={svgPath} />
